<!--pages/regist/regist.wxml-->
<image src="https://markhorizon.oss-cn-beijing.aliyuncs.com/logo/logo.png" mode="widthFix" class="logo_img"></image>

<form catchsubmit="formSubmit">
  <view class="weui-cell__bd" style="margin: 30rpx 20rpx;">
    <input class="id-input" name="id" placeholder="输入ID" />
    <view class="view_line"></view>
  </view>
  <view class="weui-cell__bd" style="margin: 30rpx 20rpx;">
    <input class="password-input" name="password" placeholder="密码" type="password"/>
    <view class="view_line"></view>
  </view>
  <view class="weui-cell__bd" style="margin: 30rpx 20rpx;">
    <input class="surepswd-input" name="surepswd" placeholder="确认密码" type="password"/>
    <view class="view_line"></view>
  </view>
  <view class="page-section page-section-gap">
    <view class="page-section-title">性别</view>
    <radio-group name="sex">
      <label><radio value="男" color="#00A8C4"/>男</label>
      <label><radio value="女" color="#00A8C4"/>女</label>
    </radio-group>
  </view>
  <view>
    <button style="margin: 30rpx 100rpx;background-color: #00A8C4;color: #FFFFFF;" formType="submit" class="sure_btn">确认</button>
  </view>
  
</form>