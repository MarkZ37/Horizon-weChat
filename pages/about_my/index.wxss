/* pages/about_my/index.wxss */
@import "../../components/article/article.wxss";

.head_bar{
  width: 100%;
  height: 40px;
  background-color: #00A8C4;
}
.head_bar .setup{
  float: left;
  width: 23.33%;
  height: 100%;
}
.head_bar .setup button{
  height: 100%;
  width: 100%;
  color: #FFFFFF;
  border-radius: 0px;
  background-color: #00A8C4;
  font-size: 15px;
  padding-left: 0px;
}
.head_bar .me{
  float: left;
  width: 53.33%;
  height: 100%;
  color: #FFFFFF;
  text-align: center;
  font-size: 20px;
}
.head_bar .more{
  float: left;
  width: 23.33%;
  height: 100%;
  color: #FFFFFF;
}
.head_bar .more button{
  height: 100%;
  width: 100%;
  color: #FFFFFF;
  border-radius: 0px;
  background-color: #00A8C4;
  font-size: 15px;
  padding-left: 0px;
  border: 0px;
}

/* 未登录页面 */
.no_login{
  width: 100%;
}
.no_login .logo_img{
  width: 100%;
}
.view_line{
  border-bottom: 1px #000000 solid;
  height: 8px;
  width: 100%;
}
.user-con{
  background-color: rgb(104, 196, 233);
  height: 132px;
  padding-top: 20px;
}
/* 头像 */
.user-con .avatar{
  width: 80px;
  height: 80px;
  margin: 0px auto;
}
.avatar .avatar-img{
  width: 100%;
  border-radius: 100px;
}
/* 发布文章 */
.deploy{
  width: 50px;
  height: 50px;
  position: fixed;
  bottom: 0px;
  right: 0px;
}
.deploy-img{
  width: 50px;
}

/* 用户信息 */

.position{
  margin: 0px auto;
  text-align: center;
  color: #FFFFFF;
}